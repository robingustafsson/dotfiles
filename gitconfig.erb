[user]
	name = <%= print("- Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("- Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	a = add
	br = branch
	brd = branch -d
	c = commit
	cm = commit -m
	co = checkout
	l = log
	m = merge
	p = push
	pt = push --tags
	s = status
	u = pull
[color]
        branch = auto
        diff = auto
        status = auto
[color "branch"]
        current = green bold
        local = normal
        remote = blue bold
        plain = normal
[color "diff"]
        plain = normal
        meta = bold
        frag = cyan
        old = red bold
        new = green bold
        commit = yellow
        whitespace = normal red
[color "status"]
        updated = green bold
        changed = red bold
        untracked = normal
        nobranch = red black bold
[core]
	excludesfile = ~/.gitignore
	editor = nano
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(green bold)%h%Creset %C(blue)(%an, %cr)\n%Creset%B
